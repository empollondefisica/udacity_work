<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ndb.courtcounter.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:text="Team A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="16sp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                />

            <TextView
                android:id="@+id/score_team_A"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="16sp"
                android:paddingBottom="24sp"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                />

            <Button
                android:text="+3 POINTS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="increaseThreePointTeamA"
                android:paddingBottom="8sp"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                />

            <Button
                android:text="+2 POINTS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="increaseTwoPointTeamA"
                android:paddingBottom="8sp"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                />

            <Button
                android:text="FREE THROW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="increaseFreeThrowTeamA"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                />

        </LinearLayout>

        <View
            android:layout_width="1sp"
            android:layout_height="300dp"
            android:background="@android:color/darker_gray"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:text="Team B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="16sp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                />

            <TextView
                android:id="@+id/score_team_B"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="16sp"
                android:paddingBottom="24sp"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                />

            <Button
                android:text="+3 POINTS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="increaseThreePointTeamB"
                android:paddingBottom="8sp"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                />

            <Button
                android:text="+2 POINTS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="increaseTwoPointTeamB"
                android:paddingBottom="8sp"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                />

            <Button
                android:text="FREE THROW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="increaseFreeThrowTeamB"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:onClick="resetScores"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
